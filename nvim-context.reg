Windows Registry Editor Version 5.00

; this script will create context menu items for Nvim

; Directory
[HKEY_CLASSES_ROOT\Directory\shell\Open in Nvim]
"Icon"="C:\\Program Files\\Neovim\\bin\\nvim-qt.exe"
[HKEY_CLASSES_ROOT\Directory\shell\Open in Nvim\command]
@="wt -w 1 nt nvim \"%V\""

; Directory background
[HKEY_CLASSES_ROOT\Directory\Background\shell\Open in Nvim]
"Icon"="C:\\Program Files\\Neovim\\bin\\nvim-qt.exe"
[HKEY_CLASSES_ROOT\Directory\Background\shell\Open in Nvim\command]
@="wt -w 1 nt nvim \"%V\""

; Files
[HKEY_CLASSES_ROOT\*\shell\Edit with Nvim]
"Icon"="C:\\Program Files\\Neovim\\bin\\nvim-qt.exe"
[HKEY_CLASSES_ROOT\*\shell\Edit with Nvim\command]
@="wt -w 1 nt nvim \"%1\""
